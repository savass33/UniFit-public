<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:background="@color/colorBackground"
    android:gravity="center_vertical">

    <!-- Ícone do exercício -->
    <ImageView
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginEnd="12dp"
        android:src="@drawable/unifit"
        android:contentDescription="Ícone do exercício" />

    <!-- Nome do exercício e info -->
    <TextView
        android:id="@+id/txtNomeExercicio"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Supino Reto (3x12)"
        android:textColor="@color/textColorPrimary"
        android:textSize="16sp"
        android:textStyle="bold"
        android:ellipsize="end"
        android:maxLines="1" />

    <!-- Botão Editar -->
    <ImageButton
        android:id="@+id/btnEditar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@android:color/transparent"
        android:contentDescription="Editar exercício"
        android:padding="4dp"
        android:src="@drawable/ic_lapis_azul"
        tools:ignore="TouchTargetSizeCheck" />

    <!-- Botão Excluir -->
    <ImageButton
        android:id="@+id/btnExcluir"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@android:color/transparent"
        android:contentDescription="Excluir exercício"
        android:padding="4dp"
        android:src="@drawable/ic_lixeira_vermelha"
        tools:ignore="TouchTargetSizeCheck" />
</LinearLayout>
