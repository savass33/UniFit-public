<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFF6FB"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="8dp">

    <!-- Imagem do exercício -->
    <ImageView
        android:id="@+id/exercicio_img"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="8dp"
        android:scaleType="centerCrop"
        android:src="@drawable/supinoimg" />

    <!-- Nome do exercício -->
    <TextView
        android:id="@+id/exercicio_nome"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Supino Inclinado"
        android:textColor="#0000FF"
        android:textSize="16sp" />

    <!-- Botão editar -->
    <ImageView
        android:id="@+id/btn_editar"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginStart="8dp"
        android:padding="4dp"
        android:src="@drawable/editar_ic" />

    <!-- Botão excluir -->
    <ImageView
        android:id="@+id/btn_excluir"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginStart="8dp"
        android:padding="4dp"
        android:src="@drawable/trash" />

    <!-- Botão mover -->
    <ImageView
        android:id="@+id/btn_mover"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginStart="8dp"
        android:src="@drawable/moveicon" />
</LinearLayout>
