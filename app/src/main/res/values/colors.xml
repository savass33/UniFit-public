<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base Palette -->
    <color name="black">#FF000000</color>
    <color name="white">#FFFFFFFF</color>
    <color name="blue_primary">#0047AB</color> <!-- Original @color/blue -->
    <color name="gray_medium">#AAAAAA</color> <!-- Original @color/gray -->
    <color name="gray_light">#CCCCCC</color> <!-- From EditText stroke -->
    <color name="gray_very_light">#FBFBFB</color> <!-- From background -->
    <color name="gray_dark">#888888</color> <!-- From secondary text -->
    <color name="green_launcher">#3DDC84</color> <!-- From launcher icon -->
    <color name="green_whatsapp">#25D366</color> <!-- From WhatsApp button -->
    <color name="transparent_white_10">#33FFFFFF</color> <!-- From launcher stroke -->
    <color name="transparent_black_25">#44000000</color> <!-- From launcher gradient -->

    <!-- Semantic Palette (Light Theme) -->
    <color name="colorPrimary">@color/blue_primary</color>
    <color name="colorPrimaryVariant">#003380</color> <!-- Darker shade of blue_primary -->
    <color name="colorOnPrimary">@color/white</color>

    <color name="colorSecondary">@color/green_launcher</color> <!-- Example, adjust if needed -->
    <color name="colorSecondaryVariant">#2EAF6A</color> <!-- Darker shade -->
    <color name="colorOnSecondary">@color/black</color>

    <color name="colorBackground">@color/white</color>
    <color name="colorBackgroundInverse">#0B112E</color>
    <color name="colorOnBackground">@color/black</color>
    <color name="colorSurface">@color/white</color>
    <color name="colorOnSurface">@color/black</color>
    <color name="colorSurfaceVariant">@color/gray_very_light</color> <!-- e.g., #FBFBFB -->
    <color name="colorOnSurfaceVariant">@color/gray_dark</color> <!-- e.g., #888888 -->
    <color name="colorOutline">@color/gray_light</color> <!-- e.g., #CCCCCC -->

    <color name="colorError">#B00020</color> <!-- Standard Material Red -->
    <color name="colorOnError">@color/white</color>

    <!-- Text Colors -->
    <color name="textColorPrimary">@color/black</color>
    <color name="textColorSecondary">@color/gray_dark</color>
    <color name="textColorHint">@color/gray_medium</color>
    <color name="textColorLink">@color/colorPrimary</color>

    <!-- Specific Component Colors -->
    <color name="buttonBackground">@color/colorPrimary</color>
    <color name="buttonTextColor">@color/colorOnPrimary</color>
    <color name="editTextBackground">@color/white</color>
    <color name="editTextStroke">@color/colorOutline</color>
    <color name="cardBackground">@color/colorSurface</color>
    <color name="iconTint">@color/textColorSecondary</color> <!-- Default tint -->
    <color name="iconTintActive">@color/colorPrimary</color> <!-- Tint for active/selected icons -->

    <!-- Brand Colors -->
    <color name="brandWhatsApp">@color/green_whatsapp</color>

    <!-- Status Colors (Example) -->
    <color name="statusOnline">#4CAF50</color> <!-- Green -->
    <color name="statusOffline">#F44336</color> <!-- Red -->

</resources>
